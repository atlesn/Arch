# Maintainer: Geir Damstuen
pkgname="st-geir"
pkgver=0.8.4
pkgrel=1
pkgdesc="A simple virtual terminal emulator for X"
url="https://st.suckless.org"
arch=('i686' 'x86_64')
license=('MIT')
depends=('libx11' 'libxft' 'freetype2' 'ttf-hack')
source=("https://github.com/geirda/Arch/raw/master/suckless/st/st-geir.tar.xz")
md5sums=('04d28f4f0eab73779e23d47150ca2b1c')

prepare() {
	cd "$srcdir/$pkgname"
}

build() {
	cd "$srcdir/$pkgname"
	make
}

package() {
	cd "$srcdir/$pkgname"
	make DESTDIR="$pkgdir" install
}
