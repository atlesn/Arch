# Maintainer: Geir Damstuen
pkgname="dwm"
pkgver=6.2
pkgrel=1
pkgdesc="A dynamic window manager for X"
url="https://dwm.suckless.org"
arch=('i686' 'x86_64')
license=('MIT')
depends=('libx11' 'libxinerama' 'libxft' 'freetype2')
source=("https://github.com/geirda/Arch/raw/master/suckless/dwm/dwm.tar.xz")
md5sums=('4a8f5964faab3a3d397b2c3c09d8e1e8')

prepare() {
	cd "$srcdir/$pkgname"
}

build() {
	cd "$srcdir/$pkgname"
	make
}

package() {
	cd "$srcdir/$pkgname"
	make DESTDIR="$pkgdir" install
}
