# Maintainer: Geir Damstuen
pkgname="dwm-geir"
pkgver=6.2
pkgrel=1
pkgdesc="A dynamic window manager for X"
url="https://dwm.suckless.org"
arch=('i686' 'x86_64')
license=('MIT')
depends=('libx11' 'libxinerama' 'libxft' 'freetype2' 'ttf-hack')
optdepends=(nerd-fonts-roboto-mono)
provides=(dwm)
conflicts=(dwm)
source=("https://github.com/geirda/Arch/raw/master/suckless/dwm/dwm-geir.tar.xz")
md5sums=('61cbbdc0309a8c8f8def3e72bd6ac46c')

prepare() {
	cd "$srcdir/$pkgname"
}

build() {
	cd "$srcdir/$pkgname"
	make
}

package() {
	cd "$srcdir/$pkgname"
	make PREFIX=/usr DESTDIR="$pkgdir" install
}
